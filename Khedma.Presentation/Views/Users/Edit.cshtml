@model UserRole
@{
    ViewData["Title"] = "تعديل بيانات المستخدم";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">تعديل بيانات المستخدم</h2>

    <form method="post" asp-action="Edit">
        <input type="hidden" asp-for="@Model.Id" /> <!-- لإرسال الـ ID في الطلب -->
        <input type="hidden" asp-for="TBUser.Id" /> <!-- لإرسال الـ ID في الطلب -->
        <!-- اسم المستخدم -->
        <div class="form-group mb-3">
            <label for="UserName">اسم المستخدم</label>
            <input asp-for="@Model.TBUser.UserName" class="form-control" id="UserName" placeholder="أدخل اسم المستخدم" />
            <span asp-validation-for="@Model.TBUser.UserName" class="text-danger"></span>
        </div>

        <!-- البريد الإلكتروني -->
        <div class="form-group mb-3">
            <label for="Email">البريد الإلكتروني</label>
            <input asp-for="@Model.TBUser.Email" class="form-control" id="Email" type="email" placeholder="أدخل البريد الإلكتروني" />
        </div>

        <!-- كلمة المرور -->
        <div class="form-group mb-3">
            <label for="Password">كلمة المرور</label>
            <input asp-for="@Model.TBUser.PasswordHash" class="form-control" id="Password" type="password" placeholder="أدخل كلمة المرور" />
            <span asp-validation-for="@Model.TBUser.PasswordHash" class="text-danger"></span>
        </div>

        <!-- الدور -->
        <div class="form-group mb-3">
            <label for="RoleId">الدور</label>
            <select asp-for="@Model.TBRole.Id" asp-items="ViewBag.Roles" class="form-control">
                <option value="">اختر الدور</option>
            </select>
            <span asp-validation-for="@Model.TBRole.Id" class="text-danger"></span>
        </div>

        <!-- زر التعديل -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary">تعديل</button>
        </div>
    </form>

    <!-- عرض الرسائل -->
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info mt-3 text-center">@ViewBag.Message</div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
