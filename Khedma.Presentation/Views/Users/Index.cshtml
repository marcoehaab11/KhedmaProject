@model IEnumerable<UserRole>

@{
    ViewData["Title"] = "المستخدمين";
}
<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center my-2 py-2">
                <h3 class="fw-bold display-4">
                    اسماء المستخدمين
                    
                </h3>
            </div>
        </div>
    </div>
</div>


<!-- زر الإضافة -->
<div class="container-fluid mb-3">
    <div class="row">
        <div class="col-12">
            <!-- زر إضافة مخدوم -->
            <a href="/users/register" class="btn btn-success">
                <i class="fa fa-plus"></i> إضافة مخدوم
            </a>

           
         
        </div>
    </div>
</div>



<!-- Container-fluid Ends-->
<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="card">

        <div class="card-body vendor-table">
            @if (Model.Count() > 0)
            {
                <table class="display" id="basic-1">
                    <thead>
                        <tr>
                            <th>الاسم</th>
                            <th>الايميل</th>
                            <th>الصلاحية</th>
                            <th>تعديل</th>
                            <th> مسح </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.TBUser.UserName</td>
                                <td>@item.TBUser.Email</td>
                                <td>@item.TBRole.RoleName</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/users/edit/@item.TBUser.Id" class="btn btn-primary">تعديل</a>

                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a onclick="confirmDelete(@item.TBUser.Id)" class="btn btn-danger">مسح</a>

                                    </div>
                                </td>
                            </tr>
                        }




                    </tbody>
                </table>
            }
            else
            {
                <h5 class="text-center fw-bold display-5 bold">
                   لا يوجد مستخدمين حتي الان
                </h5>

            }
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        function confirmDelete(itemId) {
            Swal.fire({
                title: 'هل أنت متأكد؟',
                text: "لن تتمكن من استعادة هذا العنصر بعد الحذف!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'نعم، احذف!',
                cancelButtonText: 'إلغاء'
            }).then((result) => {
                if (result.isConfirmed) {
                    // إعادة التوجيه إلى الحذف
                    window.location.href = `/Users/Delete?id=${itemId}`;                }
            });
        }




            function downloadAndPrint(stageId,ActivityId,ActiveName) {
                // تحميل الملف
                        window.location.href = `/Alhan/Upload?stageId=${stageId}&ActivityName=${ActiveName}&ActivityId=${ActivityId}`;

                // إظهار رسالة للطباعة (الطباعة تتم يدويًا بعد التنزيل)
                alert("تم تجهيز الملف. يمكنك فتحه وطباعته الآن.");
            }

    </script>

}
