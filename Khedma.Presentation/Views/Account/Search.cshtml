@{
    ViewBag.Title = "بحث عن المخدوم";
    Layout = "_SearchLayout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-sm-12 text-center">
            <h2 class="mb-4" style="direction: rtl;">أدخل الـ ID لجلب بيانات المخدوم</h2>
            <form method="post" action="/Account/GetDataById">
                <div class="mb-3 text-end" style="direction: rtl;">
                    <label for="id" class="form-label">أدخل الـ ID:</label>
                    <input type="text"
                           id="id"
                           name="id"
                           class="form-control"
                           placeholder="ادخل الـ ID"
                           required
                           style="text-align: left; direction: ltr;" />
                </div>
                <button type="submit" class="btn btn-primary w-100">بحث</button>
            </form>

            @if (ViewBag.Error != null)
            {
                <p class="text-danger mt-3" style="direction: rtl;">@ViewBag.Error</p>
            }
        </div>
    </div>
</div>

