@model Makhdoum

@{
    ViewData["Title"] = "إضافة مخدوم";
    Layout = "_AccountLayout";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">إضافة مخدوم</h2>

    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0">تفاصيل المخدوم</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "Account", FormMethod.Post))
            {
                <!-- الاسم الرباعي -->
                <div class="mb-3">
                    <label for="Name" class="form-label"><span class="text-danger">*</span> الاسم الرباعي</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "Name" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>

                <!-- رقم الهاتف -->
                <div class="mb-3">
                    <label for="PhoneNumber" class="form-label"><span class="text-danger">*</span> رقم الهاتف</label>
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @id = "PhoneNumber" })
                    @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                </div>

                <!-- تاريخ الميلاد -->
                <div class="mb-3">
                    <label for="DateOfBirth" class="form-label"><span class="text-danger">*</span> تاريخ الميلاد</label>
                    @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control", @id = "DateOfBirth", @type = "date" })
                    @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
                </div>

                <!-- زر الإضافة -->
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary btn-lg">إضافة</button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial">

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            // تحقق إذا كانت هناك رسالة نجاح في TempData
            @if (TempData["SuccessMessage"] != null)
            {
                <text>
                        Swal.fire({
                            title: 'تمت العملية بنجاح!',
                            text: '@Html.Raw(TempData["SuccessMessage"])',
                            icon: 'success',
                            confirmButtonText: 'حسنًا'
                        }).then(() => {
                            // التحويل بعد عرض الرسالة
                            window.location.href = '/Account/login'; // قم بتغيير المسار إلى الصفحة المطلوبة
                        });
                </text>
            }
        </script>

    </script>
}
